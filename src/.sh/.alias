#!bin/zsh

alias h='cd ..'
alias py='python'
alias py3='python3'

# docker
alias dcc="docker ps -a | grep Exited | awk '{print \$1}' | xargs docker rm -v"
alias dci="docker images | grep none | awk '{print \$3}' | xargs docker rmi"

# git
alias git-cl='git clean -df && git reset --hard'

# alias
alias nv='nvim'
alias vv='nvim ~/.vimrc'
alias va='nvim ~/.sh/.alias'
alias sa='source ~/.sh/.alias'
alias vb='nvim ~/.sh/.shrc'
alias sb='source ~/.sh/.shrc'
alias vz='nvim ~/.zshrc'
alias sz='source ~/.zshrc'
alias sv='source ./.venv/bin/activate'

alias vc='nvim ~/.service'

alias vr='nvim ./README.md'
alias rf='rm -rf'

alias pc='pwd | pbcopy'

alias php-fpm='/usr/local/Cellar/php70/7.0.21_13/sbin/php-fpm'

alias dpa='docker ps -a'
alias ds='docker stop'
alias dis='docker images'
# k8s
alias kcuc='kubectl config use-context'

# python
alias spv='source .venv/bin/activate'
